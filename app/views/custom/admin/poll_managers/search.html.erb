<h2><%= t("custom.admin.poll_managers.search.title") %></h2>

<%= render "admin/shared/user_search", url: search_admin_poll_managers_path %>

<div id="poll_managers">
  <% if @users.any? %>
    <h3><%= page_entries_info @users %></h3>

    <table id="poll_managers">
      <thead>
        <th scope="col"><%= User.human_attribute_name(:name) %></th>
        <th scope="col" class="small-6"><%= User.human_attribute_name(:email) %></th>
        <th scope="col"><%= t("admin.shared.actions") %></th>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= render Admin::Roles::TableActionsComponent.new(user.poll_manager || user.build_poll_manager) %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <div class="callout alert margin">
      <%= t("admin.shared.no_search_results") %>
    </div>
  <% end %>
</div>
