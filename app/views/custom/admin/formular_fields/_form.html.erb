<div id="<%= dom_id(formular_field) %>" class="formular-form-field">
  <% if formular_field.persisted? %>
    <%= button_to [@namespace, @projekt_phase, @formular, formular_field], method: :delete, remote: true, class: "close-button", data: { confirm: "Sind Sie sicher?" } do %>
      <span aria-hidden="true">&times;</span>
    <% end %>
  <% end %>

  <div class="row">
    <div class="column small-11">
      <%= form_with model: formular_field, url: polymorphic_path([@namespace, @projekt_phase, @formular, formular_field]), local: false do |f| %>
        <%= f.text_field :name %>
        <%= f.text_field :key %>
        <%= f.text_field :description %>
        <%= f.check_box :required %>
        <%= f.select :kind, FormularField::KINDS %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>

  <hr>
</div>
