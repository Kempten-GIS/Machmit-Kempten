<h2><%= t("admin.settings.index.map.title") %></h2>

<table>
  <thead>
    <tr>
      <th><%= t("admin.settings.setting") %></th>
      <th><%= t("admin.settings.setting_value") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projekt_map_settings.each do |setting| %>
      <tr>
        <td class="small-6">
          <strong><%= t("custom.settings.#{setting.key}") %></strong>
          <br>
          <span class="small">
            <%= t("custom.settings.#{setting.key}_description", default: t("admin.settings.no_description")) %>
          </span>
        </td>
        <td class="small-6">
          <%= render "custom/admin/projekts/edit/shared/settings_form", setting: setting, tab: '#tab-projekt-map' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<p><%= t("admin.settings.index.map.help") %></p>

<%= render 'custom/admin/projekts/edit/projekt_map/map_form', map_settings: @projekt_map_settings.map{ |map_setting| [map_setting.key, map_setting.value] }.to_h %>
