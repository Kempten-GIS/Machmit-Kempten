<div class='map-layer margin-bottom' id=<%= dom_id(layer) %>>

  <%= link_to edit_admin_projekt_map_layer_path(@projekt, layer), class: 'edit-map-layer', remote: true do %>
    <i class="far fa-edit"></i>
  <% end %>

  <div class='row collapse'>
    <div class='column'>
      <strong>
        <%= layer.name %>
      </strong>
      <% if layer.base? %>
        (base)
      <% end %>
    </div>
  </div>

  <div class='row collapse'>
    <div class='column medium-6'>
      <% if layer.layer_names.present? %>
        <%= t('custom.map_layer.labels.layer_names') + ':' %>
        <%= layer.layer_names %>
      <% end %>
    </div>
  </div>

  <div class='row collapse'>
    <div class='column'>
      <div>
        <%= t('custom.map_layer.labels.provider') + ':' %>
        <%= layer.provider %>
      </div>
      <div>
        <%= t('custom.map_layer.labels.attribution') + ':' %>
        <%= layer.attribution %>
      </div>
    </div>
  </div>

  <div class='row collapse'>
    <div class='column'>
      <% if layer.protocol.present? %>
        <%= t('custom.map_layer.labels.protocol') + ':' %>
        <%= layer.protocol %>
      <% end %>
      <% if layer.format.present? %>
        <%= t('custom.map_layer.labels.format') + ':' %>
        <%= layer.format %>
      <% end %>
      <% if layer.transparent.present? %>
        <%= t('custom.map_layer.labels.transparent') + ':' %>
        <%= layer.transparent %>
      <% end %>
    </div>
  </div>
</div>
