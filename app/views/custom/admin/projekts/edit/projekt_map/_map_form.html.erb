<div class="row">
  <div class="small-12 column">
    <div id="admin-map" class="map"
                        data-map
                        data-map-center-latitude="<%= map_settings["projekt_map.latitude"] %>"
                        data-map-center-longitude="<%= map_settings["projekt_map.longitude"] %>"
                        data-map-zoom="<%= map_settings["projekt_map.zoom"] %>"
                        data-map-tiles-provider="<%= Rails.application.secrets.map_tiles_provider %>"
                        data-map-tiles-provider-attribution="<%= Rails.application.secrets.map_tiles_provider_attribution %>"
                        data-marker-editable="true"
                        data-marker-latitude="<%= map_settings["projekt_map.latitude"] %>"
                        data-marker-longitude="<%= map_settings["projekt_map.longitude"] %>"
                        data-latitude-input-selector="#latitude"
                        data-longitude-input-selector="#longitude"
                        data-zoom-input-selector="#zoom">
    </div>

    <%= form_tag admin_projekt_update_map_path(@projekt), method: :put, id: "map-form" do |f| %>

      <%= hidden_field_tag :latitude, map_settings["projekt_map.latitude"] %>
      <%= hidden_field_tag :longitude, map_settings["projekt_map.longitude"] %>
      <%= hidden_field_tag :zoom, map_settings["projekt_map.zoom"] %>

      <div class="small-12 medium-6 large-4 margin-top">
        <%= submit_tag t("admin.settings.index.map.form.submit"),
                     class: "button hollow expanded" %>
      </div>

    <% end %>
  </div>
</div>
