<td style="padding-bottom: 20px; padding-left: 10px;">

  <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
    <%= t("custom.deficiency_reports.mailers.send_not_assigned_reminders.hi") %>
  </p>

  <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
    <% if @not_assigned_reports.count == 1 %>
      <%= t("custom.deficiency_reports.mailers.send_not_assigned_reminders.p1_s") %>
    <% else %>
      <%= t("custom.deficiency_reports.mailers.send_not_assigned_reminders.p1_p") %>
    <% end %>
  </p>

  <ul>
    <% @not_assigned_reports.each do |report| %>
      <li>
        <%= link_to report.title, deficiency_report_url(report) %>
      </li>
    <% end %>
  </ul>

  <p style="font-family: 'Open Sans','Helvetica Neue',arial,sans-serif;font-size: 14px;font-weight: normal;line-height: 24px;">
    <%= t("custom.deficiency_reports.mailers.send_not_assigned_reminders.signature_html") %>
  </p>
</td>
