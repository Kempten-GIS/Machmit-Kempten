<div class="tabs-panel is-active" id="tab-activities">


  <div class="row">
    <div class="column">
      <div class="map inline" id='projekt-map'>
        <%= render_map(@custom_page.projekt.map_location, "proposals", false, nil, @proposals_coordinates) %>
      </div>

      <div class='expand-proposals-overview-map small js-expand-proposals-overview-map'>
        <%= t('custom.proposals.index.show_larger_map') %>
      </div>
      <div class="clear"></div>
    </div>
  </div>

  <div class="no-bullet margin-top">
  </div>


  <div class="most-active-resources row">
    <div class="column">
      <div class="tabs-content" data-tabs-content="projekt-activity-tabs">

        <ul class="tabs"
            id="projekt-activity-tabs"
            data-deep-link="true"
            data-update-history="true"
            data-deep-link-smudge="true"
            data-deep-link-smudge-delay="500"
            data-tabs>

          <% if @custom_page.projekt.proposal_phase.present? && ( projekt_feature?(@custom_page.projekt, "general.show_not_active_phases_in_projekts_page_sidebar") || projekt_phase_active?(@custom_page.projekt, 'proposal_phase') )  %>
            <li class="tabs-title <%= active_tab_in_activity?(@custom_page.projekt, 'proposals') %>" id="projekt-most-active-proposals-tab">
              <%= link_to "#tab-projekt-most-active-proposals" do %>
                <%= t("custom.projekt.footer.show.most_active_proposals") %>
              <% end %>
            </li>
          <% end %>

          <% if @custom_page.projekt.debate_phase.present? && ( projekt_feature?(@custom_page.projekt, "general.show_not_active_phases_in_projekts_page_sidebar") || projekt_phase_active?(@custom_page.projekt, 'debate_phase') )  %>
            <li class="tabs-title <%= active_tab_in_activity?(@custom_page.projekt, 'debates') %>" id="projekt-most-active-debates-tab">
              <%= link_to "#tab-projekt-most-active-debates" do %>
                <%= t("custom.projekt.footer.show.most_active_debates") %>
              <% end %>
            </li>
          <% end %>

          <% if projekt_feature?(@custom_page.projekt, "general.show_not_active_phases_in_projekts_page_sidebar") || related_polls(@custom_page.projekt).count > 0 %>
            <li class="tabs-title <%= active_tab_in_activity?(@custom_page.projekt, 'polls') %>" id="projekt-latest-polls-tab">
              <%= link_to "#tab-projekt-latest-polls" do %>
                <%= t("custom.projekt.footer.show.latest_polls") %>
              <% end %>
            </li>
          <% end %>
        </ul>

        <div class="tabs-panel <%= active_tab_in_activity?(@custom_page.projekt, 'proposals') %>" id="tab-projekt-most-active-proposals">
          <div class="row">
            <div class="column medium-3">
              <% if projekt_phase_selectable?(@custom_page.projekt, 'proposal_phase') %>
                <%= link_to new_proposal_path + "?projekt=#{@custom_page.projekt.id}", class: 'button expanded' do %>
                  <%= t("custom.projekt.page.sidebar.phases.proposal_phase_button") %>
                <% end %>
              <% end %>
            </div>
          </div>

          <%= render partial: "proposals/proposal", collection: @most_active_proposals %>

          <%= link_to proposals_path + "?projekts=#{@custom_page.projekt.id}", class: 'all-projekt-resources-link' do %>
            <%= t("custom.projekt.page.sidebar.phases.proposal_phase_link") %>
          <% end %>
        </div>

        <div class="tabs-panel <%= active_tab_in_activity?(@custom_page.projekt, 'debates') %>" id="tab-projekt-most-active-debates">
          <div class="row">
            <div class="column medium-3">
              <% if projekt_phase_selectable?(@custom_page.projekt, 'debate_phase') %>
                <%= link_to new_debate_path + "?projekt=#{@custom_page.projekt.id}", class: 'button expanded' do %>
                  <%= t("custom.projekt.page.sidebar.phases.debate_phase_button") %>
                <% end %>
              <% end %>
            </div>
          </div>

          <%= render partial: "debates/debate", collection: @most_active_debates %>

          <%= link_to debates_path + "?projekts=#{@custom_page.projekt.id}", class: 'all-projekt-resources-link' do %>
            <%= t("custom.projekt.page.sidebar.phases.debate_phase_link") %>
          <% end %>
        </div>


        <div class="tabs-panel <%= active_tab_in_activity?(@custom_page.projekt, 'polls') %>" id="tab-projekt-latest-polls">

          <%= render partial: "polls/poll_group", locals: { poll_group: @latest_polls } %>

          <%= link_to polls_path + "?projekts=#{@custom_page.projekt.id}", class: 'all-projekt-resources-link' do %>
            <%= t("custom.projekt.page.sidebar.phases.voting_phase_link") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
