<div id="participants_by_individual_group_value" class="stats-group">

  <h4>Individual Groups</h4>

  <% (stats.hard_individual_groups + stats.soft_individual_groups).each do |individual_group| %>
    <%= individual_group.name %>
    <table>
      <tr>
        <th>Value</th>
        <th>Count</th>
        <th>Percentage</th>
      </tr>
      <% individual_group.individual_group_values.each do |individual_group_value| %>
        <tr>
          <td><%= individual_group_value.name %></td>
          <td><%= stats.total_individual_group_value_participants(individual_group_value) %></td>
          <td><%= "#{stats.total_individual_group_value_participants(individual_group_value) / stats.total_individual_group_participants(individual_group) * 100}%" %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
