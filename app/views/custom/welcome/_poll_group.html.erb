<% poll_group.each do |poll| %>
  <div class='row collapse poll-n margin-bottom' data-equalizer='main' data-equalize-on="medium">

    <div class='columns small-12 medium-3 large-2 image' data-equalizer-watch='main'>
      <% if poll.image.present? %>
        <%= image_tag poll.image_url(:thumb_wider), alt: poll.image.title.unicode_normalize %>
      <% end %>
    </div>

    <div class='columns small-12 medium-9 large-10 details' data-equalizer-watch='main' style="background-color:pink">
      <div class='column projekt-info' style="background-color:<%= poll.projekt.color %>" >
        <div class='projekt-name'>
          <i class="fas fa-<%= poll.projekt.icon || "circle" %>" ></i>
          <%= poll.projekt.name %>
        </div>

        <div class='poll-dates'>
          Von
          <%= format_date_range(poll.starts_at, poll.ends_at, 'bis') %>
        </div>
      </div>
      <div class='poll-info' data-equalizer='details' style="background-color:green">
        <div class='column small-8 poll-details' data-equalizer-watch='details' style="background-color:white">

          <h4 class='margin-top'><%= link_to_poll poll.name, poll %></h4>
          <div class="poll-summary margin-bottom">
            <%= auto_link_already_sanitized_html simple_format(poll.summary) %>
            <div class="truncate"></div>
          </div>
          <%= render "shared/tags", taggable: poll, limit: 5 %>

        </div>
        <div class='column small-4 poll-participate table' data-equalizer-watch='details' style="background-color:yellow">
          <div class='table-cell align-middle'>
            <%= link_to poll_path(id: poll.slug || poll.id), class: "button hollow expanded" do %>
              <% if poll.expired? %>
                <%= t("polls.index.participate_button_expired") %>
              <% else %>
                <%= t("custom.polls.index.participate_button") %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>




  <div class="poll with-image">
    <% if !user_signed_in? %>
      <div class="icon-poll-answer not-logged-in" title="<%= t("polls.index.not_logged_in") %>">
        <span class="show-for-sr"><%= t("polls.index.not_logged_in") %></span>
      </div>
    <% elsif user_signed_in? %>
      <% if current_user.unverified? %>
        <div class="icon-poll-answer unverified" title="<%= t("polls.index.unverified") %>">
          <span class="show-for-sr"><%= t("polls.index.unverified") %></span>
        </div>
      <% elsif cannot?(:answer, poll) %>
        <div class="icon-poll-answer cant-answer" title="<%= t("polls.index.cant_answer") %>">
          <span class="show-for-sr"><%= t("polls.index.cant_answer") %></span>
        </div>
      <% elsif !poll.votable_by?(current_user) %>
        <div class="icon-poll-answer already-answer" title="<%= t("polls.index.already_answer") %>">
          <span class="show-for-sr"><%= t("polls.index.already_answer") %></span>
        </div>
      <% end %>
    <% end %>
    <div class="row" data-equalizer data-equalize-on="medium">
      <div class="small-12 medium-3 column">
        <div class="image-container" data-equalizer-watch>
          <% if poll.image.present? %>
            <%= image_tag poll.image_url(:large), alt: poll.image.title.unicode_normalize %>
          <% end %>
        </div>
      </div>
      <div class="small-12 medium-6 column" data-equalizer-watch>
        <div class="dates"></div>
          <h4><%= link_to_poll poll.name, poll %></h4>
          <%= poll_dates(poll) %>
          <% if poll.projekt.present? && poll.projekt.page.published? %>
            <br>
            <% unless params[:controller] == "pages" %>
              <%= link_to t("custom.projekt.back_to_projekt_overview"), poll.projekt.page.url, class: 'back' %>
            <% end %>
          <% end %>


        <% if poll.show_summary_instead_of_questions? %>
          <div class="margin-top margin-bottom">
            <%= auto_link_already_sanitized_html simple_format(poll.summary) %>
          </div>
        <% else %>
          <ul class="margin-top">
            <% poll.questions.joins(:translations).order('poll_question_translations.title').each do |question| %>
              <li><%= question.title %></li>
            <% end %>
          </ul>
        <% end %>



        <%= render "shared/tags", taggable: poll, limit: 5 %>
      </div>
      <div class="small-12 medium-3 column table" data-equalizer-watch>
        <div class="table-cell align-middle">
          <%= link_to poll_path(id: poll.slug || poll.id), class: "button hollow expanded" do %>
            <% if poll.expired? %>
              <%= t("polls.index.participate_button_expired") %>
            <% else %>
              <%= t("polls.index.participate_button") %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
